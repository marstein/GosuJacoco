<project name="target.default">

	<description>
		This file specifies the default build target dependencies.
	</description>
	
	<property name="java.target.version" value="1.5"/>
	<property name="verify.jvm.args" value=""/>

	<fail message="JaCoCo should only be compiled against Java ${java.target.version}">
		<condition>
			<not>
				<equals arg1="${ant.java.version}" arg2="${java.target.version}"/>
			</not>
		</condition>
	</fail>

	
	<!-- These following path declarations assume that all libraries are
	     avaiable as standard Eclipse bundles. -->

    <fail message="Please specify property 'target.plugins.dir'" unless="target.plugins.dir"/>
		
	<path id="bundle-org.objectweb.asm">
		<last><sort>
        		<fileset dir="${target.plugins.dir}" includes="org.objectweb.asm_3.*.jar"/>
		</sort></last>
	</path>

	<path id="bundle-org.apache.ant">
		<last><sort>
	        <fileset dir="${target.plugins.dir}" includes="org.apache.ant_*/lib/ant.jar"/>
		</sort></last>
	</path>
	
	<path id="bundle-org.junit4">
		<last><sort>
	        <fileset dir="${target.plugins.dir}">
	        	<include name="org.junit4_*/junit.jar"/>
	        	<include name="org.junit_4*/junit.jar"/>
	        </fileset>
		</sort></last>
    	<last><sort>
        	<fileset dir="${target.plugins.dir}" includes="org.hamcrest.core_*.jar"/>
    	</sort></last>
	</path>
	
</project>