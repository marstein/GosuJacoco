<project name="JaCoCo Dump Task Tests" xmlns:au="antlib:org.apache.ant.antunit" xmlns:jacoco="antlib:org.jacoco.ant">
                        
        <target name="testDumpWithNoServer">
                <au:expectfailure expectedMessage="Unable to communicate with JaCoCo server">
                        <jacoco:dump/>
                </au:expectfailure>
        </target>
        
        <target name="testUnknownHost">
                <au:expectfailure expectedMessage="Unable to communicate with JaCoCo server">
                        <jacoco:dump address="nosuchhost"/>
                </au:expectfailure>
        </target>

</project>